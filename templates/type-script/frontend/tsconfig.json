{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "$page/*": ["src/page/*"],
      "$app/*": ["src/app/*"],
      "$shared/*": ["src/shared/*"],
      "$fragments/*": ["src/shared/fragments/*"],
      "$entities/*": ["src/shared/entities/*"],
      "$uis/*": ["src/shared/UIs/*"],
      "$assets/*": ["src/shared/assets/*"],
      "$styles/*": ["src/shared/assets/styles/*"],
      "$images/*": ["src/shared/assets/images/*"],
      "$fonts/*": ["src/shared/assets/fonts/*"],
      "$states/*": ["src/shared/states/*"],
      "$slices/*": ["src/shared/states/slices/*"],
      "$helpers/*": ["src/shared/helpers/*"],
      "$public/*": ["public/*"]
    },
    "jsx": "react",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "module": "ESNext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "include": ["src", "global.d.ts"]
}
